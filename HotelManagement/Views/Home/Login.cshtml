@model HotelManagement.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Login";
}

<style>

    .box--first {
        border-radius: 5px 5px 0 0;
        margin-top: -40px;
    }

    .box {
        -moz-box-shadow: 0px 0px 19px 0px rgba(0, 0, 0, 0.16);
        -webkit-box-shadow: 0px 0px 19px 0px rgba(0, 0, 0, 0.16);
        background: #fff;
        border-bottom: 1px solid #e9e9e9;
        box-shadow: 0px 0px 19px 0px rgba(0, 0, 0, 0.16);
        padding: 50px 30px;
        position: relative;
    }

 

    body {
        background-image: url(https://www.safarihotelsnamibia.com/wp-content/uploads/2014/11/Safari-Court-Hotel-Pool.jpg); 
        background-attachment: fixed;
        background-position: 50% 50%;
        background-repeat: no-repeat;
        background-size: cover;
        color: #fff;
        margin: 0;
      
    }

    .back {
        background-color: #2a7ba8;
    }

    .page-wrapper {
        margin: 0;
        padding: 0;
    }

    .text-box h1 {
        font-size: 60px;
    }

    .text-box p {
        margin-top: -37px;
    }


    .login-form {
        background-color: white;
        border-radius: 6px;
        color: black;
        margin: 0 auto;
        max-width: 300px;
        padding: 20px;
        text-align: center;
        margin-top: 20%;
    }

    .login-group {
        text-align: left
    }

    .login-h2 {
        margin-bottom: 20px;
    }

    .login-p {
        margin: 0 auto !important;
        margin-top: 20px !important;
    }


</style>


@section outsideContainer
{
    <section>
        <div class="header">
            <div class="text-box text-center">
                <img src="~/content/images/decore-logo.png">

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                  
                    <div class="login-form">


                        <h2 class="login-h2">Login</h2>

                        <div class="form-group login-group" style="text-align: left">
                            @Html.LabelFor(model => model.CustomerEmail, "Email")
                            @Html.TextBoxFor(model => model.CustomerEmail, new { @class = "form-control", placeholder = "email@gmail.com" })
                            <div class="error-holder">
                                @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group login-group" style="text-align: left">
                            @Html.LabelFor(model => model.Password, "Password")
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "password" })
                            <div class="error-holder">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <input type="submit" value="Logga in" class="btn btn-primary onLogin" />
                    </div>
                }


          
            </div>
        </div>
    </section>


}


@section scripts {
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous">

    </script>

    <script>
        $(document)
            .ready(function() {



                $(".login-form").on("click", ".onLogin",  function() {

                    console.log('TEST');
                    var loginForm = document.querySelector(".login-form");
                    loginForm.children().remove();


                    $(".login-form").append("" +
                        "<div>" +
                            "<p> Loading </p>" +
                        "</div");
                });





            });

    </script>
}