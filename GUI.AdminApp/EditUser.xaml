<Page
    x:Class="GUI.AdminApp.EditUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUI.AdminApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView>
            <TextBlock x:Name="CustomerId" Width="100"></TextBlock>
            <TextBlock x:Name="FName"></TextBlock>
            <TextBlock x:Name="LName"></TextBlock>
            <TextBlock x:Name="Email"></TextBlock>
            <TextBlock x:Name="Gender"></TextBlock>
            <TextBlock x:Name="PhoneNumber"></TextBlock>
            <TextBlock x:Name="Country"></TextBlock>
            <TextBlock x:Name="City"></TextBlock>
            <TextBlock x:Name="Adress"></TextBlock>
            <Grid>
                <Button>Edit</Button>
            </Grid>
        </GridView>
    </Grid>
</Page>
